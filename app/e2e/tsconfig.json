{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./", // Set the base URL for resolving non-relative module names
    "paths": {
      "@devcrate/playwright": [
        "../../packages/src/playwright/index.ts"
      ]
    },
    "outDir": "./dist/out-tsc",
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "rootDir": "../../",
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "include": [
    "../../packages/src/playwright/**/*.ts",
    "**/*.ts" // Only include the app/e2e folder
  ]
}
