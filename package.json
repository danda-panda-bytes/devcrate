{
  "name": "devcrate",
  "version": "0.1.0",
  "description": "devcrate monorepo for angular, playwright, and node packages",
  "dependencies": {
    "argparse": "^2.0.1",
    "ts-node": "^10.9.2"
  },
  "workspaces": [
    "packages/*",
    "app/projects/*"
  ],
  "scripts": {
    "build": "npx lerna run build",
    "prepublish": "lerna run build --since main",
    "publish": "lerna publish",
    "verify-dependencies": "ts-node -p tsconfig.json tools/verify-dependencies.ts",
    "build:apps": "cd app && npm run build:prod"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "cpx": "^1.2.1",
    "jest": "^29.7.0",
    "lerna": "^8.1.9",
    "mkdirp": "^3.0.1",
    "rimraf": "^6.0.1",
    "sass": "^1.80.6",
    "semantic-release": "^24.2.0",
    "ts-jest": "^29.2.5",
    "tsconfig-paths": "^4.2.0"
  }
}
